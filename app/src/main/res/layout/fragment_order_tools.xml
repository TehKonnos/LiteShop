<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderTools">

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:layout_marginBottom="36dp"
        android:text="Δίαλεξε μία από τις επιλογές:"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/otAdd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/otDelete"
        android:layout_width="110dp"
        android:layout_height="57dp"
        android:layout_marginTop="44dp"
        android:text="Αφαιρεση"
        app:layout_constraintEnd_toEndOf="@+id/otAdd"
        app:layout_constraintStart_toStartOf="@+id/otAdd"
        app:layout_constraintTop_toBottomOf="@+id/otAdd" />

    <Button
        android:id="@+id/otAdd"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginBottom="527dp"
        android:text="Προσθηκη"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/textView16"
        app:layout_constraintStart_toStartOf="@+id/textView16"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <Button
        android:id="@+id/otUpdate"
        android:layout_width="110dp"
        android:layout_height="60dp"
        android:layout_marginTop="44dp"
        android:text="Αλλαγη"
        app:layout_constraintEnd_toEndOf="@+id/otDelete"
        app:layout_constraintStart_toStartOf="@+id/otDelete"
        app:layout_constraintTop_toBottomOf="@+id/otDelete" />

    <Button
        android:id="@+id/otQuery"
        android:layout_width="148dp"
        android:layout_height="82dp"
        android:layout_marginTop="44dp"
        android:text="Λιστα Παραγγελιων"
        app:layout_constraintEnd_toEndOf="@+id/otUpdate"
        app:layout_constraintStart_toStartOf="@+id/otUpdate"
        app:layout_constraintTop_toBottomOf="@+id/otUpdate" />
</androidx.constraintlayout.widget.ConstraintLayout>